@inherits LayoutComponentBase


<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/lynn0702/CortexUtilities" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Lynn's Cortex Utilities</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">
                Home
            </MudNavLink>
            
            <MudNavLink Href="/scenecards" Match="NavLinkMatch.All">
                Scene Cards
            </MudNavLink>
            
            <MudNavLink Href="/gmccards" Match="NavLinkMatch.All">
                GMC Cards
            </MudNavLink>

            <MudNavLink Href="/scenetraiteditor" Match="NavLinkMatch.All">
                Scene Trait Editor
            </MudNavLink>
            
            <MudNavLink Href="/gmctraiteditor" Match="NavLinkMatch.All">
                GMC Trait Editor
            </MudNavLink>

            <MudNavLink Href="/about">
                About
            </MudNavLink>

        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="m-1rem" >
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code{
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}