@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@inherits LayoutComponentBase
@inject SignOutSessionStateManager SignOutManager

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>

<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="1" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
@*        <MudSwitch @bind-Checked="@_isDarkMode" Color="Color.Secondary" Class="ma-4" T="bool" Label=""/>*@
        <LoginDisplay />
  
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/lynn0702/CortexUtilities" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Lynn's Cortex Utilities</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">
                Home
            </MudNavLink>
            
            <MudNavLink Href="/scenecards" Match="NavLinkMatch.All">
                Scene Cards
            </MudNavLink>
            
            <MudNavLink Href="/gmccards" Match="NavLinkMatch.All">
                GMC Cards
            </MudNavLink>
            
            <MudNavLink Href="/distinctioncards" Match="NavLinkMatch.All">
                Distinction Cards
            </MudNavLink>

            <MudNavLink Href="/scenetraiteditor" Match="NavLinkMatch.All">
                Scene Trait Editor
            </MudNavLink>
            
            <MudNavLink Href="/gmctraiteditor" Match="NavLinkMatch.All">
                GMC Trait Editor
            </MudNavLink>
            
            <MudNavLink Href="/distinctiontraiteditor" Match="NavLinkMatch.All">
                Distinction Trait Editor
            </MudNavLink>

            <MudNavLink Href="/about">
                About
            </MudNavLink>

        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="m-1rem" >
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code{
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }

    private MudTheme _theme = new();
    private bool _isDarkMode;
}